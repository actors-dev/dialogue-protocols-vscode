{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dialogue Protocols",
	"patterns": [
		{ "include": "#packageName" },
		{ "include": "#interface" },
		{ "include": "#struct" }
	],
	"repository": {
        "packageName": {
			"name": "keyword.other.package_name.dpl",
			"contentName": "string.quoted.double.package_name.dpl",
			"begin": "package\\s+\"",
			"end": "\""
		},
		"interface": {
			"begin": "(interface)\\s+(\\w+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {"name": "keyword.other.interface.dpl"},
				"2": {"name": "entity.name.type.interface.dpl"},
				"3": {"name": "meta.brace.curly.dpl"}
			},
			"endCaptures": {
				"1": {"name": "meta.brace.curly.dpl"}
			},
			"patterns": [
				{"include": "#interface"},
				{"include": "#struct"},
				{
					"match": "(<-)\\s*(\\w+)\\s+((?:\\w|::)+)(.*)",
					"captures": {
						"1": {"name": "keyword.operator.accepts.dpl"},
						"2": {"name": "entity.name.function.struct.dpl"},
						"3": {"name": "entity.name.type.dpl"},
						"4": {
							"patterns": [{
								"match": "@\\w+",
								"name": "storage.modifier.accepts.attribute.dpl"
							}]
						}
					}
				}
			]
		},
		"struct": {
			"begin": "(struct)\\s+(\\w+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {"name": "keyword.other.struct.dpl"},
				"2": {"name": "entity.name.type.struct.dpl"},
				"3": {"name": "meta.brace.curly.dpl"}
			},
			"endCaptures": { "1": {"name": "meta.brace.curly.dpl" } },
			"patterns": [
				{"include": "#interface"},
				{"include": "#struct"},
				{
					"match": "(\\w+):\\s*((?:\\w|::)+)",
					"captures": {
						"1": {"name": "variable.other.struct.property.dpl"},
						"2": {"name": "entity.name.type.dpl"}
					}
				}
			]
		}
	},
	"scopeName": "source.dpl"
}